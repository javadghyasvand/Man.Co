@model IEnumerable<MySite.Models.Model.ProjectGroups>

<section class="barista-section section-padding section-bg" id="project_groups">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12 col-12 text-center mb-4 pb-lg-2">
                <h2 class="text-white">زمینه کاری ما</h2>
            </div>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <div class="col-lg-3 col-md-6 col-12 mb-4">
                        <a href="/Archive?selectGroup=@item.Id&pageId=1" class="team-block-wrap">
                            <div class="team-block-info">
                                <div class=" mb-3">
                                     <h2 style="" class="text-white mb-0 titleGroup">@item.GroupName</h2> 
                                </div>
                                @* <p class="text-white mb-0">your favourite coffee daily lives.</p> *@
                            </div>
                            <div class="team-block-image-wrap">
                                <img src="~/images/ImageGroups/@item.GroupImage" class="team-block-image img-fluid" alt="@item.GroupName">
                            </div>
                        </a>
                    </div>
                }
            }
        </div>
    </div>
</section>