@using MySite.Models.Model


<div class="theme-setting-wrapper">
    <button type="button" id="settings-trigger" class="btn btn-primary waves-effect waves-primary">
        <i class="la la-cog"></i>
    </button>
    <div class="text-center">
        <div class="h-100">
            <div class="mt-4  align-items-center  px-4">
                <h5 >تم صفحه</h5>
            </div>
            <hr>
            <div class="theme-setting-sidebar-scroll">
                <div class="px-4">
                    <div>

                        <div class="d-flex align-items-center" dir="rtl">
                            <div class="radio theme-radio mr-4">
                                <input type="radio" id="light" name="light" value="theme-light">
                                <label for="light">روشن</label>
                            </div>
                            <div class="radio theme-radio mr-4">
                                <input type="radio" id="dark" name="light" value="theme-dark">
                                <label for="dark">تاریک</label>
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                @{
                    MySiteDataEntities db = new MySiteDataEntities();
                    var user = db.Users.Single(u => u.UserEmail == User.Identity.Name);
                    <div class="mt-4  align-items-center  px-4">
                        <h5 >اطلاعات کاربر</h5>
                    </div>
                    <hr>
                    <div class="theme-setting-sidebar-scroll">
                        <div class="px-4">
                            <div>
                                <div class="align-items-center" dir="rtl">
                                    <p class="d-block">
                                        <img class="img-thumbnail rounded-circle" style="height: 75px !important; width: 75px !important" src="~/images/ImageUser/@user.UserImage"/>
                                    </p>
                                    <hr/>
                                    <p>
                                        <label>نام کاربری:</label>
                                        <strong> @user.UserName</strong>
                                    </p>
                                    <p>
                                        <label>ایمیل:</label>
                                        <strong> @user.UserEmail</strong>
                                    </p>
                                    <p>
                                        <label>شماره تماس:</label>
                                        <strong> @user.UserPhone</strong>
                                    </p>
                                </div>
                                <hr/>
                                <a class="btn btn-danger text-light" href="/Account/Account/LogOff">
                                    خروج
                                    <i class="fa fa-sign-out"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                  
                }
            </div>
        </div>
    </div>
</div>